# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/chennai-floodguard
MONGODB_TEST_URI=mongodb://localhost:27017/chennai-floodguard-test

# JWT Configuration (REQUIRED)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (REQUIRED for caching, queues, WebSocket scaling)
REDIS_URL=redis://localhost:6379

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Open-Meteo API (no key required, but can set custom endpoint)
OPEN_METEO_API_URL=https://api.open-meteo.com/v1

# Push Notifications (Web Push)
VAPID_PUBLIC_KEY=
VAPID_PRIVATE_KEY=
VAPID_SUBJECT=mailto:admin@chennaifloodguard.com

# Sentry (Error Monitoring)
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ML Pipeline
ML_CRON_INTERVAL_MIN=30

# OSRM (OpenStreetMap Routing Machine)
OSRM_URL=https://router.project-osrm.org

# Fallback APIs for weather data
WEATHER_FALLBACK_API_KEY=
WEATHER_FALLBACK_API_URL=https://api.weatherapi.com/v1

# Emergency Alert Configuration
MAX_DRIVER_DISTANCE_KM=25
